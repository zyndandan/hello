.black{
width: 100%;
height: 100%;
overflow-x: hidden;
overflow-y: scroll;
background-color: #F0F0F0;
}
.container{
 width: 95%;
 height: 800rpx;
 overflow-y:hidden;
 margin: 50rpx auto;
 overflow-x: hidden;
 background-color: white;
}
.scroll-image{
  width: 100%;
}
.content{
  background-color: #fff;
  height: 330rpx;
  width: 100%;
  text-align: center;
}
.title{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #000;

}
.scroll-view-item-AT{
  width: 100%;
  font-size: 36rpx;
  color: #c9c;
  display: none;
}
.area{
  display: inline-block;
}
.day{
  margin-left: 10rpx;
  display: inline-block;
}
.fee{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding-bottom: 0rpx; 
}

.scroll-view-item-cf{
  width: 100%;
  height: 100rpx;
  position:relative;
}
.scroll-view-item-cf::before{
  content: '';
  position: absolute;
  top: -10rpx;
  left: 10rpx;
  right: 10rpx;
  height: 1rpx;
  background-color: #E0E0E0;
  display: none;

}
.camerist_avatar{
  margin-top: 20rpx;
  margin-left: 20rpx;
  float: left;
  width: 100rpx;
  height: 100rpx;
}
.camerist_avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.camerist{
  margin-top: 20rpx;
  float: left;
  width: 200rpx;
  height: 150rpx;
  line-height: 150rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  display: none;
}
.camerist_name{
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  color: #7B7B7B;
}
.experience{
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 30rpx;
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid  #E0E0E0;
  color: #7B7B7B;
  display: none;
}
.reserve{
display: block;
margin: 40rpx auto 0 auto;
 font-size: 30rpx;
 width: 250rpx;
 height: 70rpx;
 line-height: 70rpx;
 border-radius: 10rpx;
 background-color:#FF9797;
 color: white;

}
